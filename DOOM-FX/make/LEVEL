.key EPISODE/A,MISSION/A
.bra {
.ket }
FAILAT 10
Echo "Converting {EPISODE}{MISSION}..."
Echo >RAM:TEXT "Converting {EPISODE}{MISSION}..."
RIPDOOM -LDOOMDATA:LEVELS/{EPISODE}{MISSION} -ORLLEV:{EPISODE}{MISSION} -H >>RAM:TEXT
copy RAM:TEXT DOOMDATA:LEVELS/{EPISODE}{MISSION}/TEXT QUIET
delete ram:TEXT QUIET
copy RLLEV:{EPISODE}{MISSION}/IFF DOOMDATA:LEVELS/{EPISODE}{MISSION}/IFF QUIET
delete RLLEV:{EPISODE}{MISSION}/IFF QUIET
touch >NIL: {EPISODE}My.A
